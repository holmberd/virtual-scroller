{
  "name": "@holmberd/virtual-scroller",
  "version": "1.0.0",
  "description": "High performance web component for rendering large numbers of scrollable list elements",
  "author": "Dag Holmberg (https://github.com/holmberd/)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git://github.com/holmberd/virtual-scroller.git"
  },
  "bugs": {
    "url": "https://github.com/holmberd/virtual-scroller/issues"
  },
  "publishConfig": {
    "@holmberd:registry": "https://npm.pkg.github.com"
  },
  "main": "dist/virtual-scroller.cjs.js",
  "module": "dist/virtual-scroller.esm.js",
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "jest --no-cache",
    "build": "rm -rf ./dist && node ./esbuild.js",
    "start": "npm run build && rm -f ./build-dev/virtual-scroller.js && cp ./dist/virtual-scroller.esm.js ./build-dev/virtual-scroller.js && esbuild --servedir=build-dev",
    "watch": "npm run build -- --watch"
  },
  "jest": {
    "collectCoverage": false,
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "transform": {
      "^.+\\.js?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "keywords": [
    "virtual-scroller",
    "virtual",
    "virtualized",
    "infinite",
    "list",
    "scrolling",
    "table"
  ],
  "devDependencies": {
    "esbuild": "^0.14.25",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.5.1"
  }
}
